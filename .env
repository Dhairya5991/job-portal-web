# ===============================
# SERVER
# ===============================
PORT=5000
NODE_ENV=production

# ===============================
# DATABASE (MongoDB)
# ===============================
MONGO_URI=mongodb://mongo:27017/jobportal

# ===============================
# AUTHENTICATION
# ===============================
JWT_SECRET=super_super_secret_key_change_me

# ===============================
# S3 / MINIO (Resume Storage)
# ===============================
S3_ENDPOINT=http://minio:9000
S3_BUCKET=resumes
S3_REGION=ap-south-1
S3_KEY=admin
S3_SECRET=admin123
S3_SIGNED_URL_EXPIRY=300

# ===============================
# PAGINATION DEFAULTS
# ===============================
DEFAULT_PAGE_SIZE=5
MAX_PAGE_SIZE=50

# ===============================
# EMAIL (Choose ONE)
# ===============================

# --- Option 1: AWS SES SMTP ---
SMTP_HOST=email-smtp.ap-south-1.amazonaws.com
SMTP_PORT=587
SMTP_USER=SES_SMTP_USERNAME
SMTP_PASS=SES_SMTP_PASSWORD

# --- Option 2: Gmail SMTP ---
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_gmail_app_password

# ===============================
# EMAIL METADATA
# ===============================
MAIL_FROM_NAME=Job Portal
MAIL_FROM_EMAIL=no-reply@jobportal.com

# ===============================
# FRONTEND
# ===============================
FRONTEND_URL=http://localhost
